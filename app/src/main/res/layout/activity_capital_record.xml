<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
  <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"

      android:text="top bar"
      />

  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:paddingLeft="@dimen/activity_horizontal_margin"
      android:paddingRight="@dimen/activity_horizontal_margin"
      android:paddingTop="@dimen/activity_vertical_margin"
      android:paddingBottom="@dimen/activity_vertical_margin"
      tools:context="com.miqian.mq.activity.CapitalRecordActivity"
      >
    <!-- using RecyclerView instead of ListView recommended by Google -->
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        >

      <android.support.v7.widget.RecyclerView
          android:id="@+id/recyclerView"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:padding="3dp"
          android:scrollbars="vertical"
          android:overScrollMode="never"
          />
    </android.support.v4.widget.SwipeRefreshLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/filter_container"
        android:visibility="gone"
        android:background="#ffb0b0b0"
        >

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            >
          <com.miqian.mq.views.CircleButton
              android:id="@+id/cn2"
              android:layout_width="80dp"
              android:layout_height="80dp"
              android:layout_centerHorizontal="true"
              android:layout_centerInParent="true"
              android:layout_alignParentBottom="true"
              android:layout_marginBottom="8dip"
              app:cb_color="#99CC00"
              />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerInParent="true"
              android:text="全部"
              />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            >
          <com.miqian.mq.views.CircleButton
              android:id="@+id/cirButt"
              android:layout_width="80dp"
              android:layout_height="80dp"
              android:layout_centerHorizontal="true"
              android:layout_centerInParent="true"
              android:layout_alignParentBottom="true"
              android:layout_marginBottom="8dip"
              app:cb_color="#99CC00"
              />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerInParent="true"
              android:text="全部"
              />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            >
          <com.miqian.mq.views.CircleButton
              android:id="@+id/ci"
              android:layout_width="80dp"
              android:layout_height="80dp"
              android:layout_centerHorizontal="true"
              android:layout_centerInParent="true"
              android:layout_alignParentBottom="true"
              android:layout_marginBottom="8dip"
              app:cb_color="#99CC00"
              />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerInParent="true"
              android:text="全部"
              />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            >
          <com.miqian.mq.views.CircleButton
              android:id="@+id/cutton2"
              android:layout_width="80dp"
              android:layout_height="80dp"
              android:layout_centerHorizontal="true"
              android:layout_centerInParent="true"
              android:layout_alignParentBottom="true"
              android:layout_marginBottom="8dip"
              app:cb_color="#99CC00"
              />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerInParent="true"
              android:text="全部"
              />
        </RelativeLayout>
      </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            >
          <com.miqian.mq.views.CircleButton
              android:id="@+id/citton2"
              android:layout_width="80dp"
              android:layout_height="80dp"
              android:layout_centerHorizontal="true"
              android:layout_centerInParent="true"
              android:layout_alignParentBottom="true"
              android:layout_marginBottom="8dip"
              app:cb_color="#99CC00"
              />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerInParent="true"
              android:text="全部"
              />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            >
          <com.miqian.mq.views.CircleButton
              android:id="@+id/circleButt"
              android:layout_width="80dp"
              android:layout_height="80dp"
              android:layout_centerHorizontal="true"
              android:layout_centerInParent="true"
              android:layout_alignParentBottom="true"
              android:layout_marginBottom="8dip"
              app:cb_color="#99CC00"
              />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerInParent="true"
              android:text="全部"
              />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            >
          <com.miqian.mq.views.CircleButton
              android:id="@+id/cin2"
              android:layout_width="80dp"
              android:layout_height="80dp"
              android:layout_centerHorizontal="true"
              android:layout_centerInParent="true"
              android:layout_alignParentBottom="true"
              android:layout_marginBottom="8dip"
              app:cb_color="#99CC00"
              />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerInParent="true"
              android:text="全部"
              />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            >
          <com.miqian.mq.views.CircleButton
              android:id="@+id/circleButton2"
              android:layout_width="80dp"
              android:layout_height="80dp"
              android:layout_centerHorizontal="true"
              android:layout_centerInParent="true"
              android:layout_alignParentBottom="true"
              android:layout_marginBottom="8dip"
              app:cb_color="#99CC00"
              />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerInParent="true"
              android:text="全部"
              />
        </RelativeLayout>
        <com.miqian.mq.views.CircleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/view"
            />

      </LinearLayout>
    </LinearLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/test_container_anim"
        android:text="test_container_anim"
        android:layout_gravity="bottom"
        />
  </FrameLayout>
</LinearLayout>