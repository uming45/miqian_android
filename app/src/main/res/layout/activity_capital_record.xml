<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff5f5f5"
    >
  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      tools:context="com.miqian.mq.activity.CapitalRecordActivity"
      android:id="@+id/data_view"
      android:background="#ffffffff"
      android:paddingTop="5dp"
      >
    <!-- using RecyclerView instead of ListView recommended by Google -->
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        >

      <android.support.v7.widget.RecyclerView
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:id="@+id/ultimate_recycler_view"
          />
    </android.support.v4.widget.SwipeRefreshLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/filter_container"
        android:visibility="gone"
        android:background="#88b0b0b0"
        >
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:background="#ffffffff"
          >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="切换资金记录"
            android:paddingLeft="10dp"
            android:layout_marginTop="7dp"
            android:textSize="14sp"
            android:textColor="#ffa0a0a0"
            android:layout_marginBottom="-3dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginBottom="-5dp"
            >
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="100dp"
              android:layout_weight="1"
              >
            <com.miqian.mq.views.CircleButton
                android:id="@+id/all"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="8dip"
                app:cb_color="#ffffffff"
                android:onClick="searchBtn"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="全部"
                android:id="@+id/all_t"
                android:textColor="#ff505050"
                android:textSize="16sp"
                />
          </RelativeLayout>
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="100dp"
              android:layout_weight="1"
              >
            <com.miqian.mq.views.CircleButton
                android:id="@+id/saving"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="8dip"
                app:cb_color="#ffffffff"
                android:onClick="searchBtn"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="充值"
                android:id="@+id/saving_t"
                android:textColor="#ff505050"
                android:textSize="16sp"
                />
          </RelativeLayout>
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="100dp"
              android:layout_weight="1"
              >
            <com.miqian.mq.views.CircleButton
                android:id="@+id/withdraw"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="8dip"
                app:cb_color="#ffffffff"
                android:onClick="searchBtn"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="提现"
                android:id="@+id/withdraw_t"
                android:textColor="#ff505050"
                android:textSize="16sp"
                />
          </RelativeLayout>
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="100dp"
              android:layout_weight="1"
              >
            <com.miqian.mq.views.CircleButton
                android:id="@+id/buy"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="8dip"
                android:onClick="searchBtn"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="认购"
                android:id="@+id/buy_t"
                android:textSize="16sp"
                android:textColor="#ff505050"
                />
          </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="-5dp"
            >
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="100dp"
              android:layout_weight="1"
              >
            <com.miqian.mq.views.CircleButton
                android:id="@+id/redeem"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="8dip"
                app:cb_color="#ffffffff"
                android:onClick="searchBtn"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="赎回"
                android:id="@+id/redeem_t"
                android:textColor="#ff505050"
                android:textSize="16sp"
                />
          </RelativeLayout>
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="100dp"
              android:layout_weight="1"
              >
            <com.miqian.mq.views.CircleButton
                android:id="@+id/transfer"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="8dip"
                app:cb_color="#ffffffff"
                android:onClick="searchBtn"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="转让"
                android:id="@+id/transfer_t"
                android:textColor="#ff505050"
                android:textSize="16sp"
                />
          </RelativeLayout>
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="100dp"
              android:layout_weight="1"
              >
            <com.miqian.mq.views.CircleButton
                android:id="@+id/maturity"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="8dip"
                app:cb_color="#ffffffff"
                android:onClick="searchBtn"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="到期"
                android:id="@+id/maturity_t"
                android:textColor="#ff505050"
                android:textSize="16sp"
                />
          </RelativeLayout>
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="100dp"
              android:layout_weight="1"
              >
            <com.miqian.mq.views.CircleButton
                android:id="@+id/other"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="8dip"
                app:cb_color="#ffffffff"
                android:onClick="searchBtn"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="其他"
                android:id="@+id/other_t"
                android:textColor="#ff505050"
                android:textSize="16sp"
                />
          </RelativeLayout>
          <com.miqian.mq.views.CircleButton
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/view"
              />

        </LinearLayout>
      </LinearLayout>
    </LinearLayout>
  </FrameLayout>
  <TextView
      android:id="@+id/empty_view"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:text="no data"
      android:gravity="center"

      />
</LinearLayout>