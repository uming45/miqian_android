<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/linear_origin"
        style="@style/listItem"
        >

        <TextView
            android:id="@+id/tv_originpass"
            style="@style/listItem_tv1"
            android:text="原登录密码    " />

        <EditText
            android:id="@+id/et_originpassword"
            style="@style/edittext_item"
            android:hint="@string/please_input_new_password"
            android:layout_toRightOf="@+id/tv_originpass"
            android:digits="@string/match"
            android:inputType="number"
            android:maxLength="16" >
        </EditText>
    </RelativeLayout>

    <View 
        android:id="@+id/view_origin"
        style="@style/item_divider" />

    <RelativeLayout
        style="@style/listItem" >

        <TextView
            android:id="@+id/tv_newpassword"
            style="@style/listItem_tv1"
            android:text="新登录密码    " />

        <EditText
            android:id="@+id/et_newpassword"
            style="@style/edittext_item"
            android:hint="@string/please_input_new_password"
            android:layout_toRightOf="@+id/tv_newpassword"
            android:digits="@string/match"
            android:inputType="number"
            android:maxLength="16" >
        </EditText>
    </RelativeLayout>

    <View style="@style/item_divider" />

    <RelativeLayout
        style="@style/listItem" >

        <TextView
            style="@style/listItem_tv1"
            android:id="@+id/tv_newpassword2"
            android:text="确认登录密码" />

        <EditText
            android:id="@+id/et_newpassword2"
            style="@style/edittext_item"
            android:hint="@string/please_check_password"
            android:layout_toRightOf="@+id/tv_newpassword2"
            android:digits="@string/match"
            android:inputType="number"
            android:maxLength="16" >
        </EditText>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left_right"
        android:layout_marginRight="@dimen/margin_left_right"
        android:layout_marginTop="@dimen/margin_top" >

        <Button
            android:layout_height="@dimen/listitem_height"
            style="@style/click_btn"
            android:onClick="btn_click"
            android:text="确认" />
    </LinearLayout>

</LinearLayout>