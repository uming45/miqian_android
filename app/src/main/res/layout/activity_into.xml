<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/frame_red_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/frame_white_bg"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/frame_money"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_item">

                <ImageView
                    style="@style/WrapContent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/icon_money" />

                <EditText
                    android:id="@+id/edit_money"
                    style="@style/edittext_item"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dp"
                    android:background="@null"
                    android:hint="请输入充值金额"
                    android:inputType="numberDecimal"
                    android:singleLine="true" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/frame_bank_input"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_item"
                android:visibility="gone">

                <ImageView
                    style="@style/WrapContent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/icon_card" />

                <EditText
                    android:id="@+id/edit_bank_number"
                    style="@style/edittext_item"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dp"
                    android:hint="请输入卡号"
                    android:maxLength="23"
                    android:numeric="integer" />

                <View style="@style/item_divider" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/frame_bank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_item"
                android:gravity="center_vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/bind_bank_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/mq_font3" />

                <TextView
                    android:id="@+id/bind_bank_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:maxLength="30"
                    android:textColor="@color/white"
                    android:textSize="@dimen/mq_font3" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_item"
                android:gravity="center_vertical"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="充值限额"
                    android:textColor="@color/white"
                    android:textSize="@dimen/mq_font3" />

                <TextView
                    android:id="@+id/text_limit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/mq_font3" />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/text_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="为确保资金安全，连连支付充值使用的银行卡将作为唯一提现卡。"
            android:textColor="@color/white"
            android:textSize="@dimen/mq_font3"
            android:padding="10dp"
            android:visibility="gone" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/frame_real_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="为了保证您的资金安全，首次充值需要填写实名信息"
            android:paddingBottom="10dp"
            android:textColor="@color/mq_b1"
            android:textSize="@dimen/mq_font3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/frame_white_bg"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/frame_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_item">

                <EditText
                    android:id="@+id/edit_name"
                    style="@style/edittext_item"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:hint="请输入姓名"
                    android:maxLength="16"
                    android:singleLine="true" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/frame_id_number"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_item">

                <EditText
                    android:id="@+id/edit_card_id"
                    style="@style/edittext_item"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:digits="0123456789Xx"
                    android:hint="请输入身份证号"
                    android:inputType="text"
                    android:maxLength="18"
                    android:singleLine="true" />

                <View style="@style/item_divider" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left_right"
        android:layout_marginRight="@dimen/margin_left_right"
        android:layout_marginTop="15dp">

        <Button
            android:id="@+id/bt_rollin"
            style="@style/click_btn"
            android:text="确认" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/bt_under_text"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="确认代表您同意"
            android:textColor="@color/mq_b2"
            android:textSize="@dimen/mq_font4" />

        <Button
            android:id="@+id/text_law"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/transparent"
            android:onClick="textLawCick"
            android:text="《资金管理协议》"
            android:textColor="@color/mq_bl2"
            android:textSize="@dimen/mq_font4" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_left_right"
            android:layout_marginRight="@dimen/margin_left_right"
            android:text="温馨提示：\n为了保证您的资金安全使用连连支付成功充值后，您的充值银行卡和提现银行卡将自动绑定为首次使用连连支付充值的银行卡，不可解除绑定。"
            android:textColor="@color/mq_b2"
            android:textSize="@dimen/mq_font4" />
    </RelativeLayout>
</LinearLayout>