<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_item"
        android:layout_marginTop="@dimen/margin_top"
        android:background="@color/white"
        android:minHeight="40dp"
        android:paddingBottom="5dp"
        android:paddingLeft="@dimen/margin_left_right"
        android:paddingTop="5dp">

        <TextView
            style="@style/text_black_item"
            android:layout_gravity="center_vertical"
            android:singleLine="true"
            android:text="姓名        " />

        <EditText
            android:id="@+id/edit_name"
            style="@style/edittext_item"
            android:hint="请输入您的姓名"
            android:maxLength="16"
            android:singleLine="true" />
    </LinearLayout>

    <View style="@style/item_divider" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_item"
        android:background="@color/white"
        android:minHeight="40dp"
        android:paddingBottom="5dp"
        android:paddingLeft="@dimen/margin_left_right"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/tv_register"
            style="@style/text_black_item"
            android:layout_centerVertical="true"
            android:text="身份证号" />

        <EditText
            android:id="@+id/edit_card_id"
            style="@style/edittext_item"
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_register"
            android:digits="0123456789Xx"
            android:hint="请输入您的身份证号"
            android:inputType="text"
            android:maxLength="18" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left_right"
        android:layout_marginRight="@dimen/margin_left_right"
        android:layout_marginTop="@dimen/margin_top">

        <Button
            android:id="@+id/bt_realname"
            style="@style/click_btn"
            android:text="认证" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="如有问题，请拨打客服电话"
            android:textColor="@color/mq_b2"
            android:textSize="@dimen/mq_font4"/>

        <TextView
            android:id="@+id/text_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="400-6656-191"
            android:textColor="@color/mq_bl2"
            android:textSize="@dimen/mq_font4"/>

    </LinearLayout>
</LinearLayout>