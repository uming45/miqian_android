<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_begin_countdown"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#FAECBC"
                android:drawableLeft="@drawable/ic_clock"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingLeft="15dp"
                android:text="结束时间:02天 14时 49分 16秒"
                android:textColor="@color/mq_y3_v2"
                android:textSize="@dimen/mq_font5_v2" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/mq_r1_v2">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:maxLines="1"
                    android:text="苏宁云商-上市公司保理项目(三期)"
                    android:textColor="@color/white"
                    android:textSize="@dimen/mq_font7_v2"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tv_title"
                    android:layout_below="@+id/tv_title"
                    android:layout_marginTop="10dp"
                    android:alpha="0.5"
                    android:maxLines="1"
                    android:text="30天可转让 | 100元起投 | 无限购"
                    android:textColor="@color/white"
                    android:textSize="@dimen/mq_font3_v2"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/line_vertial"
                    android:layout_width="3px"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@+id/profit_rate"
                    android:layout_alignTop="@+id/temp1"
                    android:layout_below="@+id/tv_description"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/white" />

                <TextView
                    android:id="@+id/temp1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/profit_rate"
                    android:layout_below="@+id/tv_description"
                    android:layout_marginTop="30dp"
                    android:text="年化收益"
                    android:textColor="@color/white"
                    android:textSize="@dimen/mq_font3_v2" />

                <TextView
                    android:id="@+id/profit_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/temp1"
                    android:layout_toLeftOf="@+id/tv_profit_rate_unit"
                    android:text="8.5"
                    android:textColor="@color/white"
                    android:textSize="@dimen/mq_font15_v2"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_profit_rate_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/profit_rate"
                    android:layout_toLeftOf="@+id/line_vertial"
                    android:text="%"
                    android:textColor="@color/white"
                    android:textSize="@dimen/mq_font5_v2" />

                <TextView
                    android:id="@+id/temp2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/temp1"
                    android:layout_alignTop="@+id/temp1"
                    android:layout_toRightOf="@+id/line_vertial"
                    android:text="项目期限"
                    android:textColor="@color/white"
                    android:textSize="@dimen/mq_font3_v2" />

                <TextView
                    android:id="@+id/tv_time_limit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/temp2"
                    android:layout_below="@+id/temp2"
                    android:text="60"
                    android:textColor="@color/white"
                    android:textSize="@dimen/mq_font15_v2"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/tv_time_limit"
                    android:layout_toRightOf="@+id/tv_time_limit"
                    android:text="天"
                    android:textColor="@color/white"
                    android:textSize="@dimen/mq_font5_v2" />

                <TextView
                    android:id="@+id/tv_remain_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profit_rate"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="30dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="剩余金额:￥67234/1,000,000"
                    android:textColor="@color/white"
                    android:textSize="@dimen/mq_font3_v2"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_people_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/tv_remain_amount"
                    android:layout_alignTop="@+id/tv_remain_amount"
                    android:layout_toLeftOf="@+id/tv_people_buy"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="262366"
                    android:textColor="@color/mq_y1_v2"
                    android:textSize="@dimen/mq_font3_v2"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_people_buy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/tv_remain_amount"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/tv_remain_amount"
                    android:layout_marginRight="15dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="人已购买"
                    android:textColor="@color/white"
                    android:textSize="@dimen/mq_font3_v2"
                    android:textStyle="bold" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#F8F8F8" />

            <include layout="@layout/divide_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <include layout="@layout/item_regular_description" />

                <include layout="@layout/item_regular_description" />

                <include layout="@layout/item_regular_description" />

                <include layout="@layout/item_regular_description" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#F8F8F8" />

            <include layout="@layout/divide_line" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="查看项目详情"
                android:textColor="@color/mq_r1_v2"
                android:textSize="@dimen/mq_font7_v2" />

            <include layout="@layout/divide_line" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#F8F8F8" />

            <include layout="@layout/divide_line" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="标的特色"
                android:textColor="@color/mq_b2_v2"
                android:textSize="@dimen/mq_font7_v2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="35dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="15dp"
                    android:drawableTop="@drawable/ic_ygfk"
                    android:gravity="center"
                    android:text="严格风控"
                    android:textColor="@color/mq_b2_v2"
                    android:textSize="@dimen/mq_font3_v2" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="15dp"
                    android:drawableTop="@drawable/ic_zszq"
                    android:gravity="center"
                    android:text="真实债权"
                    android:textColor="@color/mq_b2_v2"
                    android:textSize="@dimen/mq_font3_v2" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="15dp"
                    android:drawableTop="@drawable/ic_dcbz"
                    android:gravity="center"
                    android:text="多重保障"
                    android:textColor="@color/mq_b2_v2"
                    android:textSize="@dimen/mq_font3_v2" />
            </LinearLayout>

            <include layout="@layout/divide_line" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#F8F8F8" />

            <include layout="@layout/divide_line" />

            <View
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/mq_b7_v2" />

        </LinearLayout>

    </ScrollView>

    <View
        android:id="@+id/view_close_keyboard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rlyt_regular_detail_input"
        android:alpha="0.4"
        android:background="#000000"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/rlyt_dialog"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_above="@+id/rlyt_regular_detail_input"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="12dp"
        android:visibility="gone">

        <include
            layout="@layout/divide_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/tv_dialog_min_amount_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="起投金额"
            android:textColor="@color/mq_b2_v2"
            android:textSize="@dimen/mq_font3_v2" />

        <TextView
            android:id="@+id/tv_dialog_min_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_dialog_min_amount_tip"
            android:layout_below="@+id/tv_dialog_min_amount_tip"
            android:text="100"
            android:textColor="@color/mq_b1_v2"
            android:textSize="@dimen/mq_font9_v2"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_dialog_min_amount"
            android:layout_toRightOf="@+id/tv_dialog_min_amount"
            android:text="元"
            android:textColor="@color/mq_b2_v2"
            android:textSize="@dimen/mq_font3_v2" />

        <TextView
            android:id="@+id/tv_dialog_remain_amount_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_dialog_min_amount_tip"
            android:layout_alignParentRight="true"
            android:layout_marginRight="60dp"
            android:text="剩余投资限额"
            android:textColor="@color/mq_b2_v2"
            android:textSize="@dimen/mq_font3_v2" />

        <TextView
            android:id="@+id/tv_dialog_remain_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_dialog_remain_amount_tip"
            android:layout_below="@+id/tv_dialog_remain_amount_tip"
            android:text="100"
            android:textColor="@color/mq_b1_v2"
            android:textSize="@dimen/mq_font9_v2"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_dialog_remain_amount"
            android:layout_toRightOf="@+id/tv_dialog_remain_amount"
            android:text="元"
            android:textColor="@color/mq_b2_v2"
            android:textSize="@dimen/mq_font3_v2" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlyt_regular_detail_input"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <Button
            android:id="@+id/btn_buy"
            android:layout_width="85dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="35dp"
            android:text="认购"
            android:textStyle="bold" />

        <View
            android:id="@+id/bg_input"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@+id/btn_buy"
            android:background="@drawable/bg_regular_detail_input" />

        <TextView
            android:id="@+id/tv_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/bg_input"
            android:layout_alignRight="@+id/bg_input"
            android:layout_alignTop="@+id/bg_input"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text="元" />

        <EditText
            android:id="@+id/et_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/bg_input"
            android:layout_alignLeft="@+id/bg_input"
            android:layout_alignTop="@+id/bg_input"
            android:layout_toLeftOf="@+id/tv_unit"
            android:background="@null"
            android:digits="0123456789."
            android:inputType="number"
            android:maxLines="1"
            android:paddingLeft="5dp" />

    </RelativeLayout>

</RelativeLayout>