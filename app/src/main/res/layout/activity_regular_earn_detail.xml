<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff5f5f5"
    android:baselineAligned="false"
    android:orientation="vertical"

    >

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingBottom="15dp"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="45dp"
          android:background="#ffffffff"
          android:layout_weight="1"
          android:paddingTop="15dp"
          >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            >
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="总额:"
              android:id="@+id/total_amount"
              android:layout_centerVertical="true"
              android:layout_marginLeft="14dp"
              android:textColor="#ff505050"
              android:textSize="16sp"
              />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="50000"
              android:id="@+id/money_amount"
              android:layout_toRightOf="@id/total_amount"
              android:layout_centerVertical="true"
              android:layout_gravity="center"
              android:textColor="#fff13e3e"
              android:textSize="19sp"
              />
        </RelativeLayout>
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="#ffe0e0e0"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            >
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="年化收益率:"
              android:id="@+id/annualized_return"
              android:layout_centerVertical="true"
              android:textSize="16sp"
              android:layout_marginRight="5dp"
              android:textColor="#ff505050"
              />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="12.5%"
              android:id="@+id/annualized_return_num"
              android:layout_toRightOf="@id/annualized_return"
              android:layout_marginRight="10dp"
              android:layout_centerVertical="true"
              android:textSize="19sp"
              android:textColor="#fff13e3e"
              />
        </RelativeLayout>

      </RelativeLayout>
      <LinearLayout
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:background="#ffffffff"
          android:layout_marginBottom="10dp"
          android:layout_weight="1"
          android:paddingBottom="12dp"
          >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            >
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/limit"
              android:layout_alignParentLeft="true"
              android:textColor="#ff515050"
              android:text="项目期限：300天"
              android:textSize="16sp"
              android:layout_marginLeft="10dp"
              />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="转让中"
              android:background="@drawable/text_border_green"
              android:visibility="gone"
              android:id="@+id/status_zero"
              android:layout_alignParentRight="true"
              android:textColor="#ff515050"
              />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="已转让"
              android:background="@drawable/text_border_red"
              android:id="@+id/status_one"
              android:padding="3dp"
              android:layout_alignParentRight="true"
              android:textColor="#ff515050"
              android:layout_marginRight="10dp"
              />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="已还款"
              android:background="#33333333"
              android:visibility="gone"
              android:id="@+id/status_two"
              android:layout_alignParentRight="true"
              android:textColor="#ff515050"
              />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="已转让"
              android:background="#33333333"
              android:visibility="gone"
              android:id="@+id/status_three"
              android:layout_alignParentRight="true"
              android:textColor="#ff515050"
              />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            >

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="2015.09.09开始"
              android:id="@+id/date_start"
              android:layout_alignParentLeft="true"
              android:textColor="#ff505050"
              android:textSize="12sp"
              android:layout_marginLeft="10dp"
              />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="2015.11.11结束"
              android:id="@+id/date_end"
              android:layout_alignParentRight="true"
              android:textColor="#ff505050"
              android:textSize="12sp"
              android:layout_marginRight="10dp"
              />

        </RelativeLayout>


        <com.miqian.mq.views.RoundCornerProgressBar
            android:id="@+id/progress"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_margin="5dp"
            app:rcBackgroundColor="#ffecebe8"
            app:rcBackgroundPadding="0dp"
            app:rcBackgroundRadius="6dp"
            app:rcMax="100"
            app:rcProgress="100"
            app:rcProgressColor="#ffffd339"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            />

      </LinearLayout>
      <LinearLayout
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:background="#ffffffff"
          android:paddingLeft="5dp"
          android:paddingRight="5dp"
          android:layout_weight="1"
          >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="13dp"
            >
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="项目匹配"
              android:layout_alignParentLeft="true"
              android:id="@+id/op_one"
              android:textColor="#ff505050"
              android:textSize="16sp"
              android:layout_centerHorizontal="true"
              android:layout_marginLeft="10dp"
              />
          <ImageView
              android:id="@+id/right_arrow_"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/arrow_right"
              android:layout_alignParentRight="true"
              android:layout_centerHorizontal="true"
              android:layout_marginRight="10dp"
              />
          <TextView
              android:id="@+id/projects_matching"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="xx项目"
              android:layout_toLeftOf="@id/right_arrow_"
              android:textColor="#ffa1a1a1"
              android:textSize="16sp"

              android:visibility="gone"
              />

          <View
              android:layout_width="wrap_content"
              android:layout_height="1dp"
              android:background="#ffe6e6e6"
              android:layout_below="@id/op_one"
              android:layout_marginTop="11dp"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
              ></View>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="13dp"
            >
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="还款方式"
              android:layout_alignParentLeft="true"
              android:id="@+id/op_two"
              android:textColor="#ff505050"
              android:textSize="16sp"
              android:layout_marginLeft="10dp"
              />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="按月付息，到期还本"
              android:layout_alignParentRight="true"
              android:textColor="#ffa1a1a1"
              android:id="@+id/pay_mode"
              android:textSize="16sp"
              android:layout_marginRight="10dp"
              />

          <View
              android:layout_width="wrap_content"
              android:layout_height="1dp"
              android:background="#ffe6e6e6"
              android:layout_below="@id/op_two"
              android:layout_marginTop="11dp"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
              ></View>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="13dp"
            >
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="待收收益"
              android:layout_alignParentLeft="true"
              android:id="@+id/op_three"
              android:textColor="#ff505050"
              android:textSize="16sp"
              android:layout_marginLeft="10dp"
              />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="899"
              android:layout_alignParentRight="true"
              android:textColor="#ffa1a1a1"
              android:id="@+id/fromInvestmentAmount"
              android:textSize="16sp"
              android:layout_marginRight="10dp"
              />

          <View
              android:layout_width="wrap_content"
              android:layout_height="1dp"
              android:background="#ffe6e6e6"
              android:layout_below="@id/op_three"
              android:layout_marginTop="11dp"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
              ></View>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="13dp"
            >
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="总收益"
              android:layout_alignParentLeft="true"
              android:id="@+id/op_four"
              android:textColor="#ff505050"
              android:textSize="16sp"
              android:layout_marginLeft="10dp"
              />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="4000"
              android:layout_alignParentRight="true"
              android:textColor="#ffa1a1a1"
              android:id="@+id/totalInvestmentAmount"
              android:textSize="16sp"
              android:layout_marginRight="10dp"
              />

          <View
              android:layout_width="wrap_content"
              android:layout_height="1dp"
              android:background="#ffe6e6e6"
              android:layout_below="@id/op_four"
              android:layout_marginTop="11dp"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
              ></View>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="13dp"
            android:visibility="gone"
            >
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="总收益222"
              android:layout_alignParentLeft="true"
              android:id="@+id/op_four2"
              android:textColor="#ff505050"
              android:textSize="16sp"
              android:layout_marginLeft="15dp"
              />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="40002222"
              android:layout_alignParentRight="true"
              android:textColor="#ffa1a1a1"
              android:id="@+id/totalInvestmentAmount2"
              android:textSize="16sp"
              />

          <View
              android:layout_width="wrap_content"
              android:layout_height="1dp"
              android:background="#ffe6e6e6"
              android:layout_below="@id/op_four2"
              android:layout_marginTop="11dp"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
              ></View>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="13dp"
            >
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="查看合同"
              android:layout_alignParentLeft="true"
              android:id="@+id/op_five"
              android:textColor="#ff505050"
              android:textSize="16sp"
              android:layout_marginLeft="10dp"
              />

          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentRight="true"
              android:layout_marginRight="10dp"
              android:src="@drawable/arrow_right"
              />

          <View
              android:layout_width="wrap_content"
              android:layout_height="1dp"
              android:background="#ffe6e6e6"
              android:layout_below="@id/op_five"
              android:layout_marginTop="11dp"
              android:visibility="invisible"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
              ></View>
        </RelativeLayout>


      </LinearLayout>
      <Button
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:id="@+id/textView14"
          android:layout_gravity="center"
          android:gravity="center"
          android:layout_marginTop="15dp"
          android:layout_marginLeft="15dp"
          android:layout_marginRight="15dp"
          android:text="还款详情"
          android:background="@drawable/btn_red"
          android:textColor="#ffffffff"
          android:layout_weight="1"

          android:textSize="18sp"
          />

    </LinearLayout>
  </ScrollView>

</LinearLayout>