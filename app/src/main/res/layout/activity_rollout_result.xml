<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/image_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:src="@drawable/rollin_status_success"/>

        <TextView
            android:id="@+id/text_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="15dp"
            android:textSize="@dimen/mq_font2"
            android:textColor="@color/mq_b1"
            android:text="提现已提交"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_item"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/margin_top"
        android:paddingLeft="@dimen/margin_left_right"
        android:paddingRight="@dimen/margin_left_right">

        <TextView
            style="@style/f3_B1"
            android:text="提现金额" />

        <TextView
            android:id="@+id/tv_money"
            style="@style/f3_B1"
            android:layout_alignParentRight="true"
            android:text="--" />

    </RelativeLayout>

    <View style="@style/item_divider" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_item"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/margin_left_right"
        android:paddingRight="@dimen/margin_left_right">

        <TextView
            style="@style/f3_B1"
            android:text="银行卡号" />

        <TextView
            android:id="@+id/tv_cardnum"
            style="@style/f3_B1"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <View
        android:id="@+id/divider1"
        style="@style/item_divider" />

    <RelativeLayout
        android:id="@+id/frame_ordernum"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_item"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/margin_left_right"
        android:paddingRight="@dimen/margin_left_right">

        <TextView
            style="@style/f3_B1"
            android:text="业务编号" />

        <TextView
            android:id="@+id/tv_ordernum"
            style="@style/f3_B1"
            android:layout_alignParentRight="true" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left_right"
        android:layout_marginRight="@dimen/margin_left_right"
        android:layout_marginTop="15dp">

        <Button
            android:id="@+id/bt_back"
            style="@style/click_btn"
            android:text="确定" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/frame_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/margin_left_right"
        android:layout_marginRight="@dimen/margin_left_right"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/text_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/mq_b2"
            android:text="预计到账时间：两个工作日"
            android:textSize="@dimen/mq_font4"/>


    </LinearLayout>


</LinearLayout>