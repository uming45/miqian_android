<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/promote_choosed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/margin_left_right"
        android:src="@drawable/promote_no_choosed" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/promote_choosed"
        android:paddingLeft="@dimen/margin_left_right">

        <TextView
            android:id="@+id/limit_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/mq_b1"
            android:textSize="@dimen/mq_font4" />

        <TextView
            android:id="@+id/limit_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/limit_type"
            android:textColor="@color/mq_r1"
            android:textSize="@dimen/mq_font5" />

        <ImageView
            android:id="@+id/image_redpacket_state"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toLeftOf="@+id/image_red_packet"
            android:layout_marginRight="30dp"
            />

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/image_red_packet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="70dp"
            android:background="@drawable/red_package" />

        <TextView
            android:id="@+id/text_money"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:textColor="@color/mq_r1"
            android:textSize="@dimen/mq_font6" />
    </RelativeLayout>
</RelativeLayout>