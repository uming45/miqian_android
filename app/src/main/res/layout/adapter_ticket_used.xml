<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:background="@color/white">

        <ImageView
            android:id="@+id/promote_choosed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/margin_left_right"
            android:src="@drawable/promote_no_choosed" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/promote_choosed"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/mq_b1"
                android:textSize="@dimen/mq_font2" />

            <TextView
                android:id="@+id/limit_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:textColor="@color/mq_b2"
                android:textSize="@dimen/mq_font5" />

            <TextView
                android:id="@+id/limit_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/limit_type"
                android:text="有效期至"
                android:textColor="@color/mq_r1"
                android:textSize="@dimen/mq_font5" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/frame_money"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/text_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:singleLine="true"
                android:textColor="@color/mq_r1"
                android:textSize="@dimen/mq_font7" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:gravity="bottom"
                android:text="元"
                android:textColor="@color/mq_r1"
                android:textSize="@dimen/mq_font5" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>