<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_name"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="left"
            android:layout_marginLeft="@dimen/margin_left_right"
            android:singleLine="true"
            android:text="医疗项目"
            style="@style/f3_B1"/>

        <ImageView
            android:id="@+id/image_project_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/text_name"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_left_right"/>

        <ImageView
            android:id="@+id/image_project_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_left_right"/>
    </RelativeLayout>

    <View
        style="@style/item_divider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:paddingLeft="@dimen/margin_left_right"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待收本金"
                android:textColor="@color/mq_b1"
                android:textSize="@dimen/mq_font5"/>

            <TextView
                android:id="@+id/text_capital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:text="1000"
                style="@style/f1_R1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/frame_earning"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待收收益"
                android:textColor="@color/mq_b1"
                android:textSize="@dimen/mq_font5"/>

            <TextView
                android:id="@+id/text_earning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                style="@style/f1_R1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="right"
            android:paddingRight="@dimen/margin_left_right"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="年化收益率"
                android:textColor="@color/mq_b1"
                android:textSize="@dimen/mq_font5"/>

            <TextView
                android:id="@+id/text_interest_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                style="@style/f1_R1"
                android:text="12%" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="@dimen/margin_left_right"
        android:paddingRight="@dimen/margin_left_right"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_date_subscribe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:singleLine="true"
            android:textColor="@color/mq_b2"
            android:textSize="@dimen/mq_font5"
            android:text="认购日期2015-09-09" />

        <TextView
            android:id="@+id/text_date_over"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:singleLine="true"
            android:textColor="@color/mq_b2"
            android:textSize="@dimen/mq_font5"
            android:text="到期日2015-12-12" />
    </RelativeLayout>
</LinearLayout>