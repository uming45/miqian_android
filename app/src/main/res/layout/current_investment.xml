<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.miqian.mq.views.MySwipeRefresh
        android:id="@+id/swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/frame_title">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <View
                    android:id="@+id/frame_space"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_top" />

                <RelativeLayout
                    android:id="@+id/frame_tip"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_item"
                    android:background="#ffeebc"
                    android:paddingLeft="@dimen/margin_left_right"
                    android:paddingRight="@dimen/margin_left_right"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/text_tip"
                        style="@style/f3_B1"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@drawable/icon_tip_warning"
                        android:drawablePadding="10dp" />

                    <View
                        style="@style/item_divider"
                        android:layout_alignParentBottom="true" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_item"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/margin_left_right"
                    android:paddingRight="@dimen/margin_left_right">

                    <TextView
                        android:id="@+id/text_project_type"
                        style="@style/f3_B1"
                        android:drawableLeft="@drawable/icon_type_current"
                        android:drawablePadding="3dp"
                        android:text="期赚" />

                    <TextView
                        android:id="@+id/text_interest_rate"
                        style="@style/f3_B1"
                        android:layout_alignParentRight="true"
                        android:text="年化收益：" />

                </RelativeLayout>

                <View style="@style/item_divider" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_item"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:minHeight="40dp"
                    android:paddingLeft="@dimen/margin_left_right"
                    android:paddingRight="@dimen/margin_left_right">

                    <TextView
                        style="@style/f3_B1"
                        android:text="认购金额" />

                    <TextView
                        android:id="@+id/order_money"
                        style="@style/f3_B1"
                        android:layout_alignParentRight="true"
                        android:text="--" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/frame_red_package"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edit_item"
                        android:background="@color/white"
                        android:paddingLeft="@dimen/margin_left_right"
                        android:paddingRight="@dimen/margin_left_right">

                        <TextView
                            style="@style/f3_B1"
                            android:layout_centerVertical="true"
                            android:text="优惠券" />

                        <TextView
                            android:id="@+id/text_promote_unit"
                            style="@style/f3_B1"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="15dp"/>

                        <TextView
                            android:id="@+id/text_promote_money"
                            style="@style/f3_R1"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@id/text_promote_unit"/>

                        <TextView
                            android:id="@+id/text_promote"
                            style="@style/f3_B1"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="2dp"
                            android:layout_toLeftOf="@id/text_promote_money" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/right" />

                        <View
                            style="@style/item_divider"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="0dp"
                            android:layout_marginRight="0dp"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/frame_lian_pay"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edit_item"
                        android:background="@color/white"
                        android:paddingLeft="@dimen/margin_left_right"
                        android:paddingRight="@dimen/margin_left_right"
                        android:visibility="gone">

                        <TextView
                            style="@style/f3_B1"
                            android:layout_centerVertical="true"
                            android:text="连连快捷支付" />

                        <TextView
                            android:id="@+id/text_unit"
                            style="@style/f3_B1"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:singleLine="true"
                            android:text="元" />

                        <TextView
                            android:id="@+id/text_lian"
                            style="@style/f1_R1"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@id/text_unit"
                            android:singleLine="true"
                            android:text="--.--" />

                        <View
                            style="@style/item_divider"
                            android:layout_alignParentBottom="true" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/frame_pay_choose"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edit_item"
                        android:background="@color/white"
                        android:paddingLeft="@dimen/margin_left_right"
                        android:paddingRight="@dimen/margin_left_right">

                        <TextView
                            android:id="@+id/text_pay_type"
                            style="@style/f3_B1"
                            android:layout_centerVertical="true"
                            android:text="账户余额" />

                        <TextView
                            android:id="@+id/text_pay_money_unit"
                            style="@style/f3_B1"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="15dp"
                            android:singleLine="true"
                            android:text="元" />

                        <TextView
                            android:id="@+id/text_pay_money"
                            style="@style/f1_R1"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@id/text_pay_money_unit"
                            android:singleLine="true"
                            android:text="--.--" />


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/right" />
                    </RelativeLayout>

                </LinearLayout>


                <!--<RelativeLayout-->
                <!--android:id="@+id/frame_bank_pay"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="@dimen/edit_item"-->
                <!--android:paddingLeft="@dimen/margin_left_right"-->
                <!--android:paddingRight="@dimen/margin_left_right"-->
                <!--android:visibility="visible">-->

                <!--<TextView-->
                <!--android:id="@+id/text_bank_pay"-->
                <!--style="@style/f3_B1"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:text="余额不足，银行卡充值 " />-->

                <!--<TextView-->
                <!--android:id="@+id/text_bank_pay_money"-->
                <!--style="@style/f1_R1"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:layout_toRightOf="@id/text_bank_pay"-->
                <!--android:text="80.00元" />-->
                <!--</RelativeLayout>-->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_left_right"
                    android:layout_marginRight="@dimen/margin_left_right"
                    android:layout_marginTop="@dimen/margin_top"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_error_lian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="text"
                        android:textColor="@color/mq_r1"
                        android:paddingBottom="3dp"
                        android:visibility="gone"/>

                    <Button
                        android:id="@+id/bt_pay"
                        style="@style/click_btn"
                        android:text="确定认购" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/bt_under_text"
                    android:layout_gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="确定代表您同意"
                        android:textColor="@color/mq_b2"
                        android:textSize="@dimen/mq_font4" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@color/transparent"
                        android:onClick="textLawCickProduct"
                        android:text="《产品协议》"
                        android:textColor="@color/mq_bl2"
                        android:textSize="@dimen/mq_font4" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="和"
                        android:textColor="@color/mq_b2"
                        android:textSize="@dimen/mq_font4" />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@color/transparent"
                        android:onClick="textLawCickMoney"
                        android:text="《资金管理协议》"
                        android:textColor="@color/mq_bl2"
                        android:textSize="@dimen/mq_font4" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </com.miqian.mq.views.MySwipeRefresh>
</LinearLayout>