<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_dialog_background"
        android:paddingBottom="14dp"
        android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/margin_left_right"
        android:paddingRight="@dimen/margin_left_right"
        android:paddingLeft="@dimen/margin_left_right"
        android:orientation="vertical" >


    <RelativeLayout
        android:id="@+id/rela_telephone"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/input_background">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_centerVertical="true"
            android:background="@drawable/login_phone"
            android:id="@+id/login_image1" />
        <EditText
            android:id="@+id/edit_telephone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@null"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:hint="请输入手机号码"
            android:textColor="@color/mq_b1"
            android:textColorHint="@color/miqian_gray"
            android:textSize="15sp"
            android:maxLength="11"
            android:inputType="number"
            android:typeface="monospace"
            android:layout_toRightOf="@+id/login_image1"
            android:layout_toEndOf="@+id/login_image1" />
       </RelativeLayout>



        <RelativeLayout
            android:id="@+id/rela_password"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/input_background"
            android:padding="2dp">
            <ImageView
                android:id="@+id/login_image2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_centerVertical="true"
                android:background="@drawable/login_password"
                 />
            <EditText
                android:id="@+id/edit_password"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@null"
                android:layout_marginRight="10dp"
                android:singleLine="true"
                android:hint="请输入登录密码"
                android:inputType="textPassword"
                android:typeface="monospace"
                android:textColor="@color/mq_b1"
                android:textColorHint="@color/miqian_gray"
                android:textSize="15sp"
                android:maxLength="16"
                android:layout_toRightOf="@+id/login_image2"
                android:layout_toEndOf="@+id/login_image2" />
        </RelativeLayout>


        <LinearLayout
            style="@style/FillContent"
            android:orientation="horizontal"
            android:paddingTop="@dimen/margin_left_right"
            android:paddingBottom="@dimen/margin_left_right">

            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bt_height"
                android:layout_weight="1"
                android:background="@drawable/btn_red"
                android:text="登录"
                android:textColor="@color/white"
                android:textSize="@dimen/mq_font1"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/tv_login_forgetpw"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/mq_bl1"
                android:textSize="@dimen/mq_font2"
                android:text="忘记密码?" />

            <TextView
                android:id="@+id/tv_login_register"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="立即注册>"
                android:textColor="@color/mq_r1"
                android:textSize="@dimen/mq_font2"
                android:gravity="right|center" />
        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_qq_redbag"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:paddingRight="5dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:paddingTop="11dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/dialog_redbag">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingRight="5dp"
                android:paddingLeft="10dp"
                android:layout_alignParentRight="true"

                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:background="@drawable/tip_redbag"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/tv_tip"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/mq_r1"
                    android:textSize="@dimen/mq_font3"
                    android:text="已领到QQ红包?这里注册"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:id="@+id/tv_tip" />

            </RelativeLayout>
        </RelativeLayout>


    </RelativeLayout>
    </LinearLayout>

</RelativeLayout>