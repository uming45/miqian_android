<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/shape_dialog_background"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="认购金额"
                android:textColor="@color/mq_b1_v2"
                android:textSize="@dimen/mq_font8_v2" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/listitem_height"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="30dp"
            android:background="@color/mq_b7_v2"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edit_money"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:background="@null"
                android:hint="请输入认购额度"
                android:inputType="numberDecimal"
                android:paddingLeft="8dp"
                android:singleLine="true"
                android:textColor="@color/mq_b1"
                android:textColorHint="@color/mq_b5_v2"
                android:textSize="@dimen/mq_font6_v2" />

        </LinearLayout>

        <TextView
            android:id="@+id/text_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/mq_r1_v2"
            android:textSize="@dimen/mq_font3_v2"
            android:visibility="gone" />

        <LinearLayout
            style="@style/FillContent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:padding="@dimen/margin_left_right">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="@dimen/bt_height"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:text="取消"
                android:textColor="@drawable/btn_cancel_font"
                android:textSize="@dimen/mq_font7_v2" />

            <Button
                android:id="@+id/btn_sure"
                android:layout_width="0dp"
                android:layout_height="@dimen/bt_height"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:text="确认"
                android:textColor="@drawable/btn_cancel_font"
                android:textSize="@dimen/mq_font7_v2" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>