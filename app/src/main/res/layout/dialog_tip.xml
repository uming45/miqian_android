<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_dialog_background"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin_left_right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_left_right"
            android:layout_marginTop="@dimen/margin_top"
            android:text="活期转定期"
            android:textColor="@color/mq_r1"
            android:textSize="@dimen/mq_font1" />

        <View
            style="@style/item_divider"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_left_right"
            android:layout_marginRight="@dimen/margin_left_right"
            android:layout_marginTop="15dp"
            android:text="• 在购买定期理财产品时可用账户里的活期额度进行认购。"
            android:textColor="@color/mq_b1"
            android:textSize="@dimen/mq_font3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_left_right"
            android:layout_marginTop="28dp"
            android:text="活期转定期的优点"
            android:textColor="@color/mq_r1"
            android:textSize="@dimen/mq_font1" />

        <View
            style="@style/item_divider"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_left_right"
            android:layout_marginRight="@dimen/margin_left_right"
            android:layout_marginTop="15dp"
            android:text="1.方便用户快速认购定期产品。用户可先投活期，有合适的定期产品时，再进行活期转定期。"
            android:textColor="@color/mq_b1"
            android:textSize="@dimen/mq_font3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_left_right"
            android:layout_marginRight="@dimen/margin_left_right"
            android:layout_marginTop="5dp"
            android:text="2.活期赎回有限额，用户通过购买定期产品再转让从而赎回自己的活期产品。"
            android:textColor="@color/mq_b1"
            android:textSize="@dimen/mq_font3" />


        <ImageView
            android:id="@+id/iv_closetip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="26dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/close_tip" />

    </LinearLayout>

</RelativeLayout>
