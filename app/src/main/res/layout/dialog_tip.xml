<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="28dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/shape_dialog_background"
        android:paddingTop="20dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/image_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:src="@drawable/icon_tip"/>


        <TextView
            android:id="@+id/tv_title"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:textColor="@color/mq_b1_v2"
            android:textSize="@dimen/mq_font8_v2" />

        <com.miqian.mq.views.TextViewEx
            android:id="@+id/tv_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="45dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/mq_b4_v2"
            android:textSize="@dimen/mq_font6_v2" />


        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="确定"
            android:layout_marginBottom="30dp"
            android:textColor="@drawable/btn_cancel_font"
            android:textSize="@dimen/mq_font7_v2" />
    </LinearLayout>
</RelativeLayout>