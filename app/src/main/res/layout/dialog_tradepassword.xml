<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/shape_dialog_background"
        android:layout_marginTop="28dp"
        android:layout_marginRight="28dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp">

            <TextView
                android:id="@+id/dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:text="交易密码"
                android:textColor="@color/mq_b1_v2"
                android:textSize="@dimen/mq_font8_v2" />

            <TextView
                android:id="@+id/forget_psw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:text="忘记密码？"
                android:textColor="@color/mq_bl1_v2"
                android:textSize="@dimen/mq_font5_v2" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/listitem_height"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/dialog_input_bg"
                android:hint="请输入交易密码"
                android:inputType="textPassword"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:textColor="@color/mq_b1_v2"
                android:textColorHint="@color/mq_b5_v2"
                android:textSize="@dimen/mq_font6_v2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="确定代表我同意"
                android:textColor="@color/mq_b4_v2"
                android:textSize="@dimen/mq_font3_v2" />

            <TextView
                android:id="@+id/text_law"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="《资金管理协议》"
                android:textColor="@color/mq_bl1_v2"
                android:textSize="@dimen/mq_font3_v2" />
        </LinearLayout>

        <LinearLayout
            style="@style/FillContent"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:padding="@dimen/margin_left_right">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="@dimen/bt_height"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:text="取消"
                android:textColor="@drawable/btn_cancel_font"
                android:textSize="@dimen/mq_font7_v2" />

            <Button
                android:id="@+id/btn_sure"
                android:layout_width="0dp"
                android:layout_height="@dimen/bt_height"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:text="确认"
                android:textColor="@drawable/btn_cancel_font"
                android:textSize="@dimen/mq_font7_v2" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>