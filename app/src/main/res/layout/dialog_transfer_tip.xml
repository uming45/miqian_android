<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="28dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/shape_dialog_background"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="温馨提示"
                android:textColor="@color/mq_b1_v2"
                android:textSize="@dimen/mq_font8_v2" />

        </RelativeLayout>

        <com.miqian.mq.views.TextViewEx
            android:id="@+id/tv_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="20dp"
            android:text="dfeffefefeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeetetetetetetetete"
            android:textColor="@color/mq_b5_v2"
            android:textSize="@dimen/mq_font3_v2" />


        <Button
            android:id="@+id/btn_sure"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bt_height"
            android:background="@drawable/dialog_btn_confirm"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/mq_font7_v2" />
    </LinearLayout>
    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/bt_cancel_bg" />
</RelativeLayout>