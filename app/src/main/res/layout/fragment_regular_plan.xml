<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/layout_circle"
        android:layout_width="@dimen/regular_plan_circle_width"
        android:layout_height="@dimen/regular_plan_circle_width"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_circle_buy">

        <TextView
            android:id="@+id/lable_annurate_interest_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26dp"
            android:text="年化利率"
            android:textColor="@color/mq_b1"
            android:textSize="@dimen/mq_font3" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="12dp"
            android:gravity="center"
            android:text="立即认购"
            android:textColor="@color/white"
            android:textSize="@dimen/mq_font3" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_begin_time"
        android:layout_width="205dp"
        android:layout_height="45dp"
        android:layout_alignBottom="@id/layout_circle"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_wait_buy"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/mq_font1"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_annurate_interest_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="18%"
        android:textColor="@color/mq_r1"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/tv_add_interest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_annurate_interest_rate"
        android:layout_marginBottom="-10dp"
        android:layout_marginLeft="-5dp"
        android:layout_toRightOf="@id/tv_annurate_interest_rate"
        android:background="@drawable/bg_add_interest"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="@color/white"
        android:textSize="@dimen/mq_font4" />

</RelativeLayout>