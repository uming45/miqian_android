<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mq_b7_v2">


    <include layout="@layout/frame_title" />

    <com.miqian.mq.views.MySwipeRefresh
        android:id="@+id/swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/frame_title">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/current_gradual_bg"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="288dp">

                            <RelativeLayout
                                android:id="@+id/frame_image"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:clickable="true"
                                android:background="@drawable/current_circle_bg">

                                <TextView
                                    android:id="@+id/text_interest"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="76dp"
                                    android:layout_centerHorizontal="true"
                                    android:textSize="@dimen/mq_font16_v2"
                                    android:textColor="@color/mq_r1_v2"
                                    android:visibility="visible"/>

                            </RelativeLayout>
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/bt_investment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginBottom="6dp"
                                android:background="@drawable/btn_subscribe"
                                android:textColor="@color/mq_r1"
                                android:textSize="@dimen/mq_font2" />
                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/current_wave_bg">
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white">

                        <LinearLayout
                            android:id="@+id/frame_web"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_centerVertical="true"
                            android:visibility="visible">

                            <RelativeLayout
                                android:id="@+id/frame_earning"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <ImageView
                                    android:id="@+id/icon_earning"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/current_earning" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/icon_earning"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="7dp"
                                    android:text="每日计息"
                                    android:textColor="@color/mq_b2"
                                    android:textSize="@dimen/mq_font4" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/frame_safe"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <ImageView
                                    android:id="@+id/icon_safe"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/current_safe" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/icon_safe"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="7dp"
                                    android:text="本息保障"
                                    android:textColor="@color/mq_b2"
                                    android:textSize="@dimen/mq_font4" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/frame_back"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <ImageView
                                    android:id="@+id/icon_back"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/current_back" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/icon_back"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="7dp"
                                    android:text="活存活取"
                                    android:textColor="@color/mq_b2"
                                    android:textSize="@dimen/mq_font4" />
                            </RelativeLayout>


                        </LinearLayout>

                    </RelativeLayout>


                </LinearLayout>
            </RelativeLayout>
        </ScrollView>
    </com.miqian.mq.views.MySwipeRefresh>
</RelativeLayout>