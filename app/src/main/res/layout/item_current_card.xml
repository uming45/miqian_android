<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:background="@drawable/bg_current_top" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="秒钱宝－保利项目利益（第四期）"
        android:textColor="@color/mq_b7_v2"
        android:textSize="@dimen/mq_font7_v2"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_current_card"
        android:paddingBottom="30dp">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/bg_current_card_time"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="09月20日 09:00发售"
            android:textColor="@color/mq_bl3_v2"
            android:textSize="@dimen/mq_font3_v2"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/bg_profit_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_time"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_current_circle" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_profit_rate_tip"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_profit_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6.5"
                android:textColor="@color/mq_r1_v2"
                android:textSize="@dimen/mq_font17_v2"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_profit_rate_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_profit_rate"
                android:paddingLeft="5dp"
                android:text="%"
                android:textColor="@color/mq_r1_v2"
                android:textSize="@dimen/mq_font8_v2" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_profit_rate_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/bg_profit_rate"
            android:layout_centerHorizontal="true"
            android:text="年化收益"
            android:textColor="@color/mq_r1_v2"
            android:textSize="@dimen/mq_font3_v2" />

        <LinearLayout
            android:id="@+id/llyt_project_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bg_profit_rate"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_amount_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="认购金额"
                    android:textColor="@color/mq_b2_v2"
                    android:textSize="@dimen/mq_font3_v2" />

                <TextView
                    android:id="@+id/tv_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_amount_tip"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="7dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="10,000,000"
                    android:textColor="@color/mq_b2_v2"
                    android:textSize="@dimen/mq_font8_v2"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_date_limit_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="项目期限"
                    android:textColor="@color/mq_b2_v2"
                    android:textSize="@dimen/mq_font3_v2" />

                <TextView
                    android:id="@+id/tv_date_limit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_date_limit_tip"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="活存活取"
                    android:textColor="@color/mq_b2_v2"
                    android:textSize="@dimen/mq_font5_v2"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_people_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="投资人数"
                    android:textColor="@color/mq_b2_v2"
                    android:textSize="@dimen/mq_font3_v2" />

                <TextView
                    android:id="@+id/tv_people"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_people_tip"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="7dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="1,000,000"
                    android:textColor="@color/mq_b2_v2"
                    android:textSize="@dimen/mq_font8_v2"
                    android:textStyle="bold" />
            </RelativeLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btn_state"
            android:layout_width="165dp"
            android:layout_height="40dp"
            android:layout_below="@+id/llyt_project_detail"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_no_begin"
            android:gravity="center"
            android:text="待开标"
            android:textColor="@color/white"
            android:textSize="@dimen/mq_font8_v2"
            android:textStyle="bold" />

    </RelativeLayout>

</RelativeLayout>
