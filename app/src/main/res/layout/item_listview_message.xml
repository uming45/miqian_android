<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:paddingBottom="10dp"
        android:paddingLeft="@dimen/margin_left_right"
        android:paddingRight="@dimen/margin_left_right"
        android:paddingTop="10dp" >

        <ImageView
            android:id="@+id/iv_isRead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/iv_isRead"
            android:orientation="vertical" >

            <RelativeLayout style="@style/WrapContent" >

                <TextView
                    android:id="@+id/tv_title"
                    style="@style/text_black_item"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:maxEms="10"
                    android:singleLine="true"/>

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_title"
                    android:layout_centerVertical="true"
                    android:background="@drawable/message_system"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/iv_state" />

                <TextView
                    android:id="@+id/tv_time"
                    style="@style/text_gray_item"
                    android:layout_alignParentRight="true"
                    android:ellipsize="end"
                    android:layout_centerVertical="true"
                    android:gravity="right"
                    android:maxLines="2"
                    android:text="--"
                    android:singleLine="true"
                    android:textSize="14sp"
                    android:layout_toRightOf="@+id/iv_state"
                    android:layout_toEndOf="@+id/iv_state" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_content"
                style="@style/text_gray_item"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="--"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>

    <!-- <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginBottom="1dp"
        android:background="#C7C7BB" /> -->

</LinearLayout>