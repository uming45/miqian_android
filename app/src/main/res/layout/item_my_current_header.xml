<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/account_head_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:text="昨日收益(元)"
            android:textColor="@color/white"
            android:textSize="@dimen/mq_font3_v2" />

        <TextView
            android:id="@+id/earning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="--:--"
            android:textColor="@color/white"
            android:textSize="@dimen/mq_font15_v2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="在投本金(元)"
            android:textColor="@color/white"
            android:textSize="@dimen/mq_font3_v2" />

        <TextView
            android:id="@+id/captial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="--:--"
            android:textColor="@color/white"
            android:textSize="@dimen/mq_font11_v2" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="30dp">

            <View
                android:id="@+id/view"
                android:layout_width="1px"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:background="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/view"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="在投收益(元)"
                    android:textColor="@color/white"
                    android:textSize="@dimen/mq_font3_v2" />

                <TextView
                    android:id="@+id/total_earning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:text="--:--"
                    android:textColor="@color/white"
                    android:textSize="@dimen/mq_font4_v2" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/view"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="年化收益"
                    android:textColor="@color/white"
                    android:textSize="@dimen/mq_font3_v2" />

                <TextView
                    android:id="@+id/text_interest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:text="--"
                    android:textColor="@color/white"
                    android:textSize="@dimen/mq_font4_v2" />

            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>



    <RelativeLayout
        android:id="@+id/frame_current_record"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_item"
        android:background="@color/white"
        android:minHeight="40dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="@dimen/margin_left_right"
        android:paddingRight="@dimen/margin_left_right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="交易记录"
            android:textColor="@color/mq_b1_v2"
            android:textSize="@dimen/mq_font7_v2" />

        <ImageView
            style="@style/WrapContent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/right" />
    </RelativeLayout>

    <RelativeLayout

        android:id="@+id/frame_project_match"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_item"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:paddingLeft="@dimen/margin_left_right"
        android:paddingRight="@dimen/margin_left_right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="项目匹配"
            android:textColor="@color/mq_b1_v2"
            android:textSize="@dimen/mq_font7_v2" />
        <ImageView
            style="@style/WrapContent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/right" />

    </RelativeLayout>
    <View style="@style/item_divider_no_margin" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:paddingLeft="@dimen/margin_left_right"
        android:paddingRight="@dimen/margin_left_right"
        android:textSize="@dimen/mq_font4_v2"
        android:textColor="@color/mq_b4_v2"
        android:textStyle="bold"
        android:text="温馨提示："
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin_left_right"
        android:paddingRight="@dimen/margin_left_right"
        android:textSize="@dimen/mq_font4_v2"
        android:textColor="@color/mq_b4_v2"
        android:text="在投收益，因为匹配项目还款日不同，将不定期付息，并归还至账户余额。"
        />


</LinearLayout>