<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF0000"
    android:padding="15dp">

    <RelativeLayout
        android:id="@+id/rlyt_card_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/regular_card_top"
        android:paddingBottom="30dp"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:maxLines="1"
            android:text="央企保理项目二期"
            android:textColor="@color/mq_b2_v2"
            android:textSize="@dimen/mq_font7_v2"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/line"
            android:layout_width="2dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/propaganda_word"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@+id/tv_title"
            android:text="|"
            android:textColor="@color/mq_b2_v2"
            android:textSize="@dimen/mq_font3_v2" />

        <TextView
            android:id="@+id/propaganda_word"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/tv_title"
            android:layout_alignTop="@+id/tv_title"
            android:layout_toRightOf="@+id/line"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="低风险,安全保障"
            android:textColor="@color/mq_b2_v2"
            android:textSize="@dimen/mq_font3_v2" />

        <TextView
            android:id="@+id/profit_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="25dp"
            android:maxLines="1"
            android:shadowColor="#EE9D3D"
            android:shadowDx="4.0"
            android:shadowDy="8.0"
            android:shadowRadius="10"
            android:text="12"
            android:textColor="#FFFFFF"
            android:textSize="45sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/profit_rate_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/profit_rate"
            android:layout_toRightOf="@+id/profit_rate"
            android:maxLines="1"
            android:text="%"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/mq_font3_v2" />

        <TextView
            android:id="@+id/temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/profit_rate"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/profit_rate_sign"
            android:maxLines="1"
            android:text="年化收益"
            android:textColor="@color/mq_y2_v2"
            android:textSize="@dimen/mq_font3_v2" />

        <TextView
            android:id="@+id/tv_time_limit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/profit_rate"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/temp"
            android:maxLines="1"
            android:shadowColor="#EE9D3D"
            android:shadowDx="4.0"
            android:shadowDy="8.0"
            android:shadowRadius="10"
            android:text="7"
            android:textColor="#FFFFFF"
            android:textSize="45sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_day_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/profit_rate"
            android:layout_toRightOf="@+id/tv_time_limit"
            android:maxLines="1"
            android:text="天"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/mq_font3_v2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/profit_rate"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tv_day_sign"
            android:maxLines="1"
            android:text="期限"
            android:textColor="@color/mq_y2_v2"
            android:textSize="@dimen/mq_font3_v2" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_remain_amount"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/rlyt_card_top"
        android:background="@drawable/regular_card_bottom"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingLeft="15dp"
        android:text="剩余金额:￥67234/1,000,000"
        android:textColor="@color/mq_y2_v2"
        android:textSize="@dimen/mq_font3_v2"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_buy"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignBottom="@+id/tv_remain_amount"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:background="@drawable/btn_regular_card_buy" />

</RelativeLayout>
