<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mohu">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_dialog_background"
            android:orientation="vertical"
            android:paddingBottom="14dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/margin_left_right"
                android:paddingRight="@dimen/margin_left_right"
                android:paddingTop="@dimen/margin_left_right">


                <RelativeLayout
                    android:id="@+id/rela_telephone"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/input_background">

                    <ImageView
                        android:id="@+id/login_image1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_margin="3dp"
                        android:background="@drawable/login_phone" />

                    <EditText
                        android:id="@+id/edit_telephone"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toEndOf="@+id/login_image1"
                        android:layout_toRightOf="@+id/login_image1"
                        android:background="@null"
                        android:hint="请输入手机号码"
                        android:inputType="number"
                        android:maxLength="11"
                        android:singleLine="true"
                        android:textColor="@color/mq_b1"
                        android:textColorHint="@color/miqian_gray"
                        android:textSize="15sp"
                        android:typeface="monospace" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rela_password"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/input_background"
                    android:padding="2dp">

                    <ImageView
                        android:id="@+id/login_image2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_margin="3dp"
                        android:background="@drawable/login_password" />

                    <EditText
                        android:id="@+id/edit_password"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginRight="10dp"
                        android:layout_toEndOf="@+id/login_image2"
                        android:layout_toRightOf="@+id/login_image2"
                        android:background="@null"
                        android:hint="请输入登录密码"
                        android:inputType="textPassword"
                        android:maxLength="16"
                        android:singleLine="true"
                        android:textColor="@color/mq_b1"
                        android:textColorHint="@color/miqian_gray"
                        android:textSize="15sp"
                        android:typeface="monospace" />
                </RelativeLayout>


                <LinearLayout
                    style="@style/FillContent"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/margin_left_right"
                    android:paddingTop="@dimen/margin_left_right">

                    <Button
                        android:id="@+id/btn_login"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/bt_height"
                        android:layout_weight="1"
                        android:background="@drawable/btn_red"
                        android:text="登录"
                        android:textColor="@color/white"
                        android:textSize="@dimen/mq_font1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_login_forgetpw"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="忘记密码?"
                        android:textColor="@color/mq_bl1"
                        android:textSize="@dimen/mq_font2" />

                    <TextView
                        android:id="@+id/tv_login_register"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right|center"
                        android:text="立即注册>"
                        android:textColor="@color/mq_r1"
                        android:textSize="@dimen/mq_font2" />
                </LinearLayout>


            </LinearLayout>

            <RelativeLayout
                android:id="@+id/layout_qq_redbag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="5dp"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/frame_redbag"
                    android:layout_width="200dp"
                    android:layout_height="48dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/dialog_redbag"
                    android:paddingTop="11dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:paddingLeft="10dp"
                        android:paddingRight="5dp"

                        >

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_toLeftOf="@+id/tv_tip"
                            android:background="@drawable/tip_redbag" />

                        <TextView
                            android:id="@+id/tv_tip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dp"
                            android:text="已领到QQ红包?这里注册"
                            android:textColor="@color/mq_r1"
                            android:textSize="@dimen/mq_font3" />

                    </RelativeLayout>
                </RelativeLayout>


            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>