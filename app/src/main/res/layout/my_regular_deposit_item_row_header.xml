<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ffffffff"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    >
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="总资产："
        android:id="@+id/total_asset"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:gravity="right"
        android:textColor="#ff000000"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2笔"
        android:layout_toRightOf="@id/total_asset"
        android:id="@+id/total_asset_value"
        android:layout_centerVertical="true"
        android:textColor="#ffff0000"
        />
  </RelativeLayout>
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="本金："
        android:id="@+id/principal"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:gravity="right"
        android:textColor="#ff000000"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥100"
        android:id="@+id/principal_value"
        android:layout_toRightOf="@id/principal"
        android:layout_centerVertical="true"
        />
  </RelativeLayout>
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="待收收益："
        android:id="@+id/unreceived_earning"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:gravity="right"
        android:textColor="#ff000000"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥100"
        android:id="@+id/unreceived_earning_value"
        android:layout_toRightOf="@id/unreceived_earning"
        android:layout_centerVertical="true"
        />
  </RelativeLayout>
</LinearLayout>