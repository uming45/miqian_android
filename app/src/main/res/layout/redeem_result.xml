<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="279dp"
            android:background="@drawable/account_head_bg"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/result_bg" />

            <ImageView
                android:id="@+id/image_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/result_success" />

            <TextView
                android:id="@+id/text_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_status"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="赎回成功"
                android:textColor="@color/white"
                android:textSize="@dimen/mq_font6_v2" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_item"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_left_right"
            android:paddingRight="@dimen/margin_left_right">

            <TextView
                style="@style/f7_B1_V2"
                android:text="赎回本金" />

            <TextView
                android:id="@+id/text_capital"
                style="@style/f7_B4_V2"
                android:layout_alignParentRight="true"
                android:text="--" />

        </RelativeLayout>

        <View
            android:id="@+id/view_divider3"
            style="@style/item_divider" />

        <View
            android:id="@+id/view_divider1"
            style="@style/item_divider" />

        <RelativeLayout
            android:id="@+id/frame_arriveAmt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_item"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_left_right"
            android:paddingRight="@dimen/margin_left_right">

            <TextView
                style="@style/f7_B1_V2"
                android:text="预期到账时间" />

            <TextView
                android:id="@+id/text_balance"
                style="@style/f7_B4_V2"
                android:text="2个工作日"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

        <View
            android:id="@+id/view_divider2"
            style="@style/item_divider" />

        <RelativeLayout
            android:id="@+id/frame_casecode"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_item"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_left_right"
            android:paddingRight="@dimen/margin_left_right">

            <TextView
                style="@style/f7_B1_V2"
                android:text="业务编号" />

            <TextView
                android:id="@+id/trade_number"
                style="@style/f7_B4_V2"
                android:layout_alignParentRight="true" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_right"
            android:layout_marginRight="@dimen/margin_left_right"
            android:layout_marginTop="15dp">

            <Button
                android:id="@+id/bt_back"
                style="@style/click_btn"
                android:text="确定" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/frame_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_right"
            android:layout_marginRight="@dimen/margin_left_right"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:paddingBottom="50dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/mq_b2"
                android:textSize="@dimen/mq_font4" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>