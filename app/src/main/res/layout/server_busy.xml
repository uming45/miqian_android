<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/iv_houzi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="77dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="matrix"
        android:src="@drawable/icon_page_error" />

    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="3dp"
        android:textColor="@color/mq_b2"
        android:textSize="@dimen/mq_font5_v2" />

    <Button
        android:id="@+id/btn_refresh"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_refresh_selector"
        android:gravity="center"
        android:text="点击刷新"
        android:textStyle="bold"
        android:textColor="@color/mq_bl3_v2"
        android:textSize="@dimen/mq_font7_v2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="您可以了解:"
        android:textStyle="bold"
        android:textColor="@color/mq_b1_v2"
        android:textSize="@dimen/mq_font7_v2" />

    <TextView
        android:id="@+id/tv_lookAround1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="• 一分钟了解秒钱"
        android:textColor="@color/mq_bl3_v2"
        android:textSize="@dimen/mq_font7_v2" />

    <TextView
        android:id="@+id/tv_lookAround2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="• 成熟风控体系"
        android:textColor="@color/mq_bl3_v2"
        android:textSize="@dimen/mq_font7_v2" />

    <TextView
        android:id="@+id/tv_lookAround3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="• 秒钱优质资产"
        android:textColor="@color/mq_bl3_v2"
        android:textSize="@dimen/mq_font7_v2" />

    <TextView
        android:id="@+id/tv_lookAround4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="• 了解更多秒钱理财干货"
        android:textColor="@color/mq_bl3_v2"
        android:textSize="@dimen/mq_font7_v2" />

</LinearLayout>