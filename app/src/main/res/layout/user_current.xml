<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/account_head_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:text="昨日收益(元)"
            android:textColor="@color/white"
            android:textSize="@dimen/mq_font3_v2" />

        <TextView
            android:id="@+id/earning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="--:--"
            android:textColor="@color/white"
            android:textSize="@dimen/mq_font15_v2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="在投本金(元)"
            android:textColor="@color/white"
            android:textSize="@dimen/mq_font3_v2" />

        <TextView
            android:id="@+id/captial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="--:--"
            android:textColor="@color/white"
            android:textSize="@dimen/mq_font11_v2" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="30dp">

            <View
                android:id="@+id/view"
                android:layout_width="1px"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:background="@color/white"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/view"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="在投收益(元)"
                    android:textColor="@color/white"
                    android:textSize="@dimen/mq_font3_v2" />

                <TextView
                    android:id="@+id/total_earning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:text="--:--"
                    android:textColor="@color/white"
                    android:textSize="@dimen/mq_font4_v2" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/view"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="年化收益"
                    android:textColor="@color/white"
                    android:textSize="@dimen/mq_font3_v2" />

                <TextView
                    android:id="@+id/text_interest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:text="--"
                    android:textColor="@color/white"
                    android:textSize="@dimen/mq_font4_v2" />

            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>


    <RelativeLayout
        android:id="@+id/frame_current_record"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_item"
        android:background="@color/white"
        android:minHeight="40dp"
        android:paddingLeft="@dimen/margin_left_right"
        android:paddingRight="@dimen/margin_left_right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="认购赎回记录"
            android:textColor="@color/mq_b2_v2"
            android:textSize="@dimen/mq_font7_v2" />

        <ImageView
            style="@style/WrapContent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/right" />
    </RelativeLayout>

    <View style="@style/item_divider" />

    <RelativeLayout
        android:id="@+id/frame_project_match"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_item"
        android:background="@color/white"
        android:paddingLeft="@dimen/margin_left_right"
        android:paddingRight="@dimen/margin_left_right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="项目匹配"
            android:textColor="@color/mq_b2_v2"
            android:textSize="@dimen/mq_font7_v2" />

        <ImageView
            style="@style/WrapContent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/right" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/frame_subscribe"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_redeem"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_user_current_redeem"
                android:text="赎回"
                android:textColor="@drawable/btn_user_current_redeem_text"
                android:textSize="@dimen/mq_font7_v2" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/mq_b4" />

            <Button
                android:id="@+id/bt_subscribe"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_user_current_redeem"
                android:text="认购"
                android:textColor="@drawable/btn_user_current_redeem_text"
                android:textSize="@dimen/mq_font7_v2" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_above="@id/frame_subscribe"
            android:background="@color/mq_b4" />
    </RelativeLayout>
</LinearLayout>