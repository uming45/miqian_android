<resources>

    <!-- Base application theme. -->
    <style name="AppTheme">
        <!-- Customize your theme here. -->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FillContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="NotificationText" parent="android:TextAppearance.StatusBar.EventContent" />
    <style name="NotificationTitle" parent="android:TextAppearance.StatusBar.EventContent.Title" />

    <style name="wfy_title_default">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/title_height</item>
        <item name="com.miqian.mq:leftImage">@drawable/btn_back_selector</item>
        <item name="com.miqian.mq:leftIsBack">true</item>
        <item name="com.miqian.mq:centerTextColor">@color/white</item>
        <item name="com.miqian.mq:rightTextColor">@color/white</item>
        <item name="android:background">@color/red_base</item>
    </style>


    <style name="Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
    </style>

    <style name="text_black_item" parent="WrapContent">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/miqian_black</item>
        <item name="android:textSize">@dimen/textsize_normal</item>
    </style>

    <style name="text_gray_item" parent="WrapContent">
        <item name="android:textColor">@color/miqian_gray</item>
        <item name="android:textSize">@dimen/textsize_normal</item>
    </style>
    <style name="edittext_item" parent="FillContent">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">@dimen/edit_item</item>
        <item name="android:background">@drawable/trans</item>
        <item name="android:textSize">@dimen/textsize_normal</item>
        <item name="android:textColor">@color/miqian_black</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textColorHint">@color/miqian_gray</item>
        <item name="android:ems">10</item>
    </style>

    <style name="listItem" parent="FillContent">
    <item name="android:paddingRight">@dimen/margin_left_right</item>
    <item name="android:paddingLeft">@dimen/margin_left_right</item>
    <item name="android:background">@drawable/list_click</item>
    <item name="android:layout_height">@dimen/listitem_height</item>
    </style>

    <style name="item_divider" parent="FillContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:layout_marginLeft">@dimen/margin_left_right</item>
        <item name="android:background">#C7C7BB</item>
    </style>

    <style name="click_btn" parent="FillContent">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/textsize_middle</item>
        <item name="android:background">@drawable/btn_red</item>
    </style>

    <!--定期赚item view-->
    <style name="regular_earn_item_lable">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/subtitle_text_color</item>
        <item name="android:textSize">@dimen/textsize_smaller</item>
    </style>

</resources>

